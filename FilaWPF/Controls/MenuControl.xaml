<UserControl x:Class="FilaWPF.Controls.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilaWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Top" Background="LightGray">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
            <Menu  Background="#FF898580">
                <MenuItem Header="_View" FontSize="17" FontWeight="DemiBold" Padding="20 0" Foreground="#FF4A4A49" BorderThickness="2" Margin= "2 0" Background="#FFF9F8F8">
                    <MenuItem
                        Header="_Chamada"
                        Command ="{Binding SelectViewModelCommand}"/>
                    <MenuItem
                        Header="_Retirada"
                        Command ="{Binding SelectViewModelCommand}"
                        />
                </MenuItem>

            </Menu>
        </StackPanel>
    </Grid>
</UserControl>
