<Window x:Class="FilaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:FilaWPF.View" 
        xmlns:viewModel="clr-namespace:FilaWPF.ViewModel" 
        xmlns:controls="clr-namespace:FilaWPF.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:ChamadaSenhaViewModel}">
            <view:ChamadaSenhaView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:RetiradaSenhaViewModel}">
            <view:RetiradaSenhaView/>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="3 0">
        <!--Definitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <controls:HeaderControl Grid.Row="0"/>
        <!--Menu-->
        <Menu Background="{StaticResource MenuBackground}" Grid.Row="1">
            <MenuItem Header="_Menu" FontSize="17" FontWeight="DemiBold" Padding="20 0" Foreground="#FF4A4A49" BorderThickness="2" Margin= "2 0" Background="{StaticResource MenuItemBackground}">
                <MenuItem
                        Header="_Chamada"
                        Command ="{Binding SelectViewModelCommand}"
                        CommandParameter="{Binding ChamadaSenhaViewModel}"/>
                <MenuItem
                        Header = "_Retirada"
                        Command = "{Binding SelectViewModelCommand}"
                        CommandParameter = "{Binding RetiradaSenhaViewModel}"/>
            </MenuItem>
        </Menu>
        <!--Body-->
        <ContentControl Grid.Row="2" Content="{Binding SelectedViewModel}"/>
        <StackPanel Grid.Row="3">
            <StackPanel.Resources>
                <Style TargetType="Button" x:Key="ConfigButtonStyle">
                    <Setter Property="FontWeight" Value="DemiBold"/>
                    <Setter Property="Margin" Value="25 5"/>
                    <Setter Property="Background" Value="{StaticResource ConfigButtonBackground}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Configurações" Style="{StaticResource ConfigButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
